{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "api#build": {
            "dependsOn": ["^build"],
            "env": [
                "PORT",
                "API_ORIGIN",
                "WEB_ORIGIN",
                "DATABASE_MAX_RETRIES",
                "DATABASE_URL",
                "JWT_ISS",
                "JWT_KID",
                "REFRESH_TOKEN_EXPIRY",
                "REDIS_URL",
                "EMAIL_VERIFICATION_TOKEN_EXPIRY_MS",
                "ACCESS_TOKEN_EXPIRY",
                "RESEND_API_KEY",
                "HMAC_256_SECRET_KEY",
                "SESSION_LIMIT"
            ],
            "outputs": ["dist/**"]
        },
        "web#build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "db:deploy": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "start": {
            "dependsOn": ["^start"],
            "cache": false
        }
    }
}
