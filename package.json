{
    "name": "clove-auth-saas",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "check-types": "turbo run check-types",
        "clean": "turbo run clean",
        "db:deploy": "pnpm --filter api db:deploy",
        "db:generate": "pnpm --filter api db:generate",
        "db:migrate": "pnpm --filter api db:migrate",
        "db:push": "pnpm --filter api db:push",
        "db:studio": "pnpm --filter api db:studio",
        "dev": "turbo run dev",
        "docker:down": "docker-compose -f infra/docker/docker-compose.local.yml down",
        "docker:up": "docker-compose -f infra/docker/docker-compose.local.yml up -d",
        "format": "prettier --write \"**/*.{json,js,mjs,ts,jsx,tsx}\"",
        "lint": "turbo run lint",
        "prepare": "husky",
        "start": "turbo run start"
    },
    "lint-staged": {
        "**/*.{json,js,mjs,ts,jsx,tsx}": "prettier --write"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "jiti": "^2.5.1",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-packagejson": "^2.5.19",
        "turbo": "^2.5.6"
    },
    "packageManager": "pnpm@10.15.0",
    "engines": {
        "node": ">=18"
    }
}
